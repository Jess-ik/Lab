{
    "manifest_version": 2,
    "name": "Otterify",
    "description": "Chrome extension to replace all images by cute otters",
    "author": "Jess Louvel",
    "version": "1",
    "permissions": ["tabs"],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["scripts/cheesify.js"]
      }
    ],
    "background": {
      // ...
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "My first Chrome Extension"
    },
  
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
}